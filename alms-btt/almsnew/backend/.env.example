# Veritabanı Ayarları
DATABASE_URL=mssql+pyodbc://almsadmin:YOUR_PASSWORD@alms-db-server.database.windows.net:1433/almss-db?driver=ODBC+Driver+17+for+SQL+Server

# Azure AD Kimlik Doğrulama
AZURE_CLIENT_ID=your_azure_client_id
